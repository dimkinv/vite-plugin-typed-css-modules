{
  "compilerOptions": {
    "target": "es2019",
    "module": "esnext",
    "moduleResolution": "nodenext",
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "importsNotUsedAsValues": "error",
    "isolatedModules": true,
    "preserveValueImports": true,
    "outDir": ".",
    "lib": ["esnext", "DOM"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
